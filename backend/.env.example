# Application
NODE_ENV=development
PORT=5000

# Database Configuration
DB_USER=your_database_user
DB_HOST=localhost
DB_NAME=thulobazaar
DB_PASSWORD=your_database_password
DB_PORT=5432

# Database Connection Pool Configuration (Optional)
# DB_POOL_MIN=5              # Minimum connections (default: 5 dev, 10 prod)
# DB_POOL_MAX=20             # Maximum connections (default: 20 dev, 50 prod)
# DB_IDLE_TIMEOUT=30000      # Close idle connections after ms (default: 30000)
# DB_CONNECT_TIMEOUT=5000    # Connection timeout in ms (default: 5000)
# DB_STATEMENT_TIMEOUT=30000 # Query timeout in ms (default: 30000)

# Security
JWT_SECRET=your_very_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# Typesense Configuration
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=your_typesense_api_key

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100